
<aside class="left-bar">
  <div class="user-photo">
        <% if current_user.photo.attached? %>
          <image src=<%= (url_for(current_user.photo)) %>>
    <% else %>
      no image yet
    <% end %>
  </div>
  <div class="user-fullname"><%= current_user.fullname %><br>(<%= current_user.username %>)</div>
  
  <div class="user-stats">
    <div>
     <p class="stat-num"><%= current_user.followeds.count %></p>
      <p>Following</p>
    </div>
    <div>
      <p class="stat-num"><%= current_user.followers.count %></p>
      <p><%= 'Follower'.pluralize(current_user.followers.count) %></p>
    </div>
  </div>
  <%= link_to tastes_path, class: "left-bar-active" do %>
    <i class="fa fa-home"></i>
    <div class="menu-item">Home</div>
  <% end %>
    <%= link_to discover_path do %>
    <i class="fa fa-hashtag"></i>
    <div class="menu-item">Discover</div>
  <% end %>
  <%= link_to user_path(current_user.id) do %>
    <i class="fa fa-user"></i>
    <div class="menu-item">Profile</div>
  <% end %>


</aside>
